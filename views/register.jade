extends layout

block content
    form.form-signin(action='/login', method='post')
    center
        h2.form-signin-heading User Login
    input.form-control(type='text', placeholder='Email address', autofocus='autofocus')
    input.form-control(type='password', placeholder='Password')
    label.checkbox
        input(type='checkbox', value='remember-me')
        | Remember me
    button.btn.btn-large.btn-primary.btn-block(type='submit') Login